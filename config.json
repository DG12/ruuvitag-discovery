{
    "name": "RuuviTag Discovery",
    "version": "0.1.4-rc2",
    "slug": "ruuvitag-discovery",
    "description": "Discover RuuviTag Environmental Sensors using a web interface and broadcast measures to multiple targets (MQTT, InfluxDB, Graphite, Home Assistant).",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "url": "https://github.com/balda/ruuvitag-discovery",
    "startup": "application",
    "boot": "auto",
    "privileged": [
        "SYS_RAWIO"
    ],
    "hassio_api": true,
    "homeassistant_api": true,
    "host_network": true,
    "ingress": true,
    "ingress_port": 8099,
    "options": {
        "sampling": {
            "history": "100",
            "interval": "10000"
        },
        "battery": {
            "min": "2500",
            "max": "3000"
        },
        "targets": []
    },
    "schema": false
}
